import pygame
pygame.init()

W, H = 1000, 600
FPS = 120
WEISS = (255, 255, 255)

fenster = pygame.display.set_mode((W, H))
pygame.display.set_caption("Spiel mit der NETTEN Biene")
clock = pygame.time.Clock()

spieler = pygame.image.load("plaschi.png").convert_alpha()
spieler = pygame.transform.scale(spieler, (275//2, 362//2))

gras = pygame.image.load("grass.png").convert_alpha()
gras = pygame.transform.scale(gras, (1000, 650))

spielerposX, spielerposY = 300, 300

spielaktiv = True
while spielaktiv:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            spielaktiv = False

    # Tasten abfragen
    keys = pygame.key.get_pressed()
    if keys[pygame.K_SPACE]:
        spielerposY -= 3
    if keys[pygame.K_s]:
        spielerposY += 3
    if keys[pygame.K_a]:
        spielerposX -= 3
    if keys[pygame.K_d]:
        spielerposX += 3

    # Begrenzung Spieler im Fenster
    spielerposX = max(0, min(spielerposX, W - spieler.get_width()))
    spielerposY = max(0, min(spielerposY, H - spieler.get_height()))

    # Rendern
    fenster.fill(WEISS)
    fenster.blit(gras, (0, 0))
    fenster.blit(spieler, (spielerposX, spielerposY))

    pygame.display.flip()
    clock.tick(FPS)

pygame.quit()
